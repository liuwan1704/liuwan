<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jnmd.liuwan.mapper.HotelMapper">
	<select id="maxNum" resultType="int">
		select count(*) from hotel_msg
	</select>
	<select id="getHotels" parameterType="Map" resultMap="HotelPic">
		select *
		from hotel_msg h,hotel_pic p 
		where p.hid = h.hid
		limit #{start},#{pagesize} 
	</select>
	<resultMap type="com.jnmd.liuwan.domain.HotelPic" id="HotelPic">
         <id property="pid" column="pid"/>
         <result property="picPath" column="picpath"/>
         <association property="hotel" javaType="com.jnmd.liuwan.domain.Hotel">
             <id property="hid" column="hid"/>
             <result property="name" column="name"/>
             <result property="contact" column="contact"/>
             <result property="address" column="address"/>
             <result property="feature" column="feature"/>
             <result property="level" column="level"/>
             <result property="serverDesc" column="serverDesc"/>
         </association>
     </resultMap>
     <resultMap type="com.jnmd.liuwan.domain.HotelMid" id="HotelMid">
     	<id property="mid" column="mid"/>
     	<association property="hotel" javaType="com.jnmd.liuwan.domain.Hotel">
     		<id property="hid" column="hid"/>
     	</association>
     	<collection property="hotelPrice" javaType="java.util.List" ofType="com.jnmd.liuwan.domain.HotelPrice">
     		<id property="hpid" column="hpid"/>
     		<result property="price" column="price"/>
     		<result property="area" column="area"/>
     		<result property="floor" column="floor"/>
     		<result property="smoke" column="smoke"/>
     		<result property="peomax" column="peomax"/>
     		<association property="houseType" javaType="com.jnmd.liuwan.domain.HouseType">
     			<id property="houseId" column="houseId"/>
     			<result property="houseType" column="houseType"/>
     		</association>
     	</collection>
     </resultMap>
     <select id="getHouses" parameterType="Map" resultMap="HotelMid">
     	select * from
     	house_price p,house_type t,hotel
     	where p.hpid = (select pid from hotel_mid where pid = #{hid})
     	and
     	p.house_id = t.houseId
     	and
     </select>
</mapper>